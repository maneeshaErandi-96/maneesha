<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <RelativeLayout
        android:id="@+id/button_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@color/colorprimary" />

        <View
            android:id="@+id/view14"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="552dp"
            android:background="@drawable/ic_wave" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginLeft="103dp"
            android:layout_marginEnd="121dp"
            android:layout_marginRight="121dp"
            android:layout_marginBottom="416dp"
            app:srcCompat="@drawable/download" />

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:layout_marginLeft="79dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:layout_marginBottom="252dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:onClick="onClickbutton"
            android:text="GO YOUR SEARCH"
            android:textAllCaps="false"
            android:textColor="#0E0E0E"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#7DE4CC" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="270dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginEnd="73dp"
            android:layout_marginRight="73dp"
            android:layout_marginBottom="370dp"
            android:text="Department of Trade and Investment Policies"
            android:textColor="#161716"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="107dp"
            android:layout_marginLeft="107dp"
            android:layout_marginBottom="92dp"
            android:text="@Powerd by ITMD Ministry of Finance"
            android:textColor="#F60F0F"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="39dp"
            android:layout_height="35dp"
            android:onClick="onClickImage"
            app:srcCompat="@drawable/ic_help"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="74dp"
            android:layout_marginLeft="74dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:layout_marginBottom="156dp"
            android:background="@drawable/custom_button"
            android:onClick="Onlogin"
            android:text="Admin Login"
            android:textColor="#0E0E0E"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#7DE4CC" />


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <RelativeLayout
        android:id="@+id/button_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/tarrif"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="81dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:onClick="OnClickTarrif"
            android:text="TARIFF CALCULATE"
            android:textAllCaps="false"
            android:textColor="#0E0E0E"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#7DE4CC" />

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@color/colorprimary" />

        <View
            android:id="@+id/view14"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/ic_wave" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_below="@+id/view14"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="112dp"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            app:srcCompat="@drawable/download" />

        <Button
            android:id="@+id/button"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="83dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:onClick="onClickbutton"
            android:text="HS CODE SEARCH"
            android:textAllCaps="false"
            android:textColor="#0E0E0E"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#7DE4CC" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="270dp"
            android:layout_height="29dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:text="Department of Trade and Investment Policies"
            android:textColor="#161716"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button6"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="598dp"
            android:layout_marginEnd="97dp"
            android:layout_marginRight="97dp"
            android:text="@Powerd by ITMD Ministry of Finance"
            android:textColor="#F60F0F"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="39dp"
            android:layout_height="35dp"
            android:onClick="onClickImage"
            app:srcCompat="@drawable/ic_help"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/button6"
            android:layout_width="103dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="303dp"
            android:layout_marginLeft="303dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:onClick="Onlogin"
            android:text=" Login"
            android:textColor="#0E0E0E"
            android:textColorLink="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/colorprimary" />


    </RelativeLayout>


</RelativeLayout>
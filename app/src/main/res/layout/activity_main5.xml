<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    tools:context=".MainActivity5">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="HS DETAILS"
                android:textColor="@color/purple_500"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="description"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/un"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="uni"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/va"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="vat"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customs"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="Customs duty"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sur"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="Surcharge"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ces"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="Cess Levy"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ex"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="Excise Duty"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RIDL"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="RIDL"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SRL"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="SRL"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NBT"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical|start"
                android:text="NBT"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/pa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="200dp"
                android:gravity="center_vertical|start"
                android:text="PAL"
                android:textAllCaps="true"
                android:textColor="#231e23"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <Button

        android:layout_marginTop="650dp"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to tarrif calculate >>"
        android:gravity="center"
        android:layout_marginLeft="75dp"
        android:onClick="OnClickTarrif"
        />


</androidx.cardview.widget.CardView>